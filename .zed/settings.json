{
    "tab_size": 4,
    "hard_tabs": false,
    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
    },
    "languages": {
        "Python": {
            "tab_size": 4,
            "hard_tabs": false,
            "language_servers": [
                "basedpyright",
                "!pyright",
                "!pylsp",
                "!pyrefly",
            ],
        },
        "Rust": {
            "tab_size": 4,
            "hard_tabs": false,
        },
        "C++": {
            "tab_size": 4,
            "hard_tabs": false,
        },
        "TOML": {
            "tab_size": 2,
            "hard_tabs": false,
        },
        "JSON": {
            "tab_size": 2,
            "hard_tabs": false,
        },
        "Markdown": {
            "tab_size": 2,
            "hard_tabs": false,
        },
    },
    "lsp": {
        "clangd": {
            "binary": {
                "arguments": [],
            },
        },
        "basedpyright": {
            "settings": {
                "basedpyright.analysis": {
                    "autoSearchPaths": true,
                    "useLibraryCodeForTypes": true,
                    "autoImportCompletions": true,
                    "inlayHints": {
                        "variableTypes": true,
                        "callArgumentNames": true,
                        "functionReturnTypes": true,
                        "genericTypes": true,
                    },
                },
            },
        },
    },
}
